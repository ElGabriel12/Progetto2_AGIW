        open: function() {
          $('body').addClass('blur');
        },
        close: function() {
          $('body').removeClass('blur');
        }
      }).data("kendoWindow").center().open();
    });

    $("ul.actions li.use_tooltip").kendoTooltip({
      position: 'bottom',
